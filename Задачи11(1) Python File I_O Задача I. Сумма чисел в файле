#Hapilin v.1.0
a =  open("p9.txt", "r")
z = open("p9viv.txt","w")
f = a.readlines()
print(f)


k = int(0)
for i in f:
    k = int(0)
    for j in i:
        try:
            j = int(j)
            if type(j) == int:
                k += j
        except:
            j = str(j)
    z.write(str(k) + "\n")
z.close()
a.close()

p9.txt
 123
aaa456
1x2y3 4 5 6

p9viv.txt
6
15
21


#Hapilin v.2.0
a =  open("Zadacha_I.txt", "r")
z = open("Zadacha_I_viv.txt","w")
f = a.readlines()
summa = int(0)
k = str("0")
for i in f:
    for j in i:
        try:
            j = int(j)
            k += str(j)
        except:
            summa += int(k)
            k = str("0")
summa += int(k)
z.write(str(summa))
z.close()
a.close()

Zadacha_I.txt
 123
aaa456
1x2y3 4 5 6

Zadacha_I_viv.txt
600
